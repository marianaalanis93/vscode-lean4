{
    "compilerOptions": {
		"experimentalDecorators": true,
		"resolveJsonModule": true,
        "module": "commonjs",
        "target": "es6",
        "outDir": "out",
        "lib": [
			"es6",
			"es2020.string"
        ],
        "sourceMap": true,
        "alwaysStrict": true,
        "rootDir": "./src",
        "noImplicitAny": true,
        "strictNullChecks": true
    },
    "include": [
        "src/**/*"
    ],
}
